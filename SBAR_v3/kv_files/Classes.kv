<BackgroundLabel@Label+BackgroundColor>:

    background_color: 1, 1, 1, 1


<BlueButton@Button>:   
    background_color: 217/255,225/255,1,1
    background_normal: ''
    background_down: ''
    canvas:
        Color:
            rgba: 0,0,0,1
        Rectangle:
            texture: self.texture
            size: self.texture_size
            pos: self.center_x - self.texture_size[0]/2, self.center_y - self.texture_size[1]/2
<MyTextInput@TextInput>:
    foreground_color: 0, 0, 0, 1  # default text color
    background_color: 1, 1, 1, 1  # default background color
    canvas.before:
        Color:
            rgba: (0, 1, 0, 1) if self.focus else (1, 1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
<CustomSlider@Slider>:
    orientation: 'vertical'
    background_width: '10dp'
    background_height: self.height
    background_color: .4, .4, .4, .4
    slider_color: 0, 0, 1, 1
    slider_width: '10dp'
    slider_pos: 'None'
    size_hint_x: None
    width: dp(10)
    slider_disabled: True

<SbarWhiteButton@Button>:
    font_size: sp(12)
    background_color: 1, 1, 1, 0
    background_normal: ''
    canvas:
        Color:
            rgba: 0, 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size
        Rectangle:
            texture: self.texture
            size: self.texture_size
            pos: self.x/2 + (self.width - self.texture_size[0]), self.center_y - self.texture_size[1]/2

<CustomApp@App>:
    id: app