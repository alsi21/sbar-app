#:kivy 1.0.9

<SbarNote@BoxLayout>:
    id: SbarNote
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(80)
    canvas.before:
        Color:
            id: color
            rgba: 217/255,225/255,1,1
        Rectangle:
            size: self.size
            pos: self.pos
            
    RoundedRedButton:
        id: buttonone
        text: ''
        font_size: dp(16)* root.get_font_size()
        text_size: self.width, None
        size: self.texture_size
        halign: 'center'
        background_color: 0,0,0,0.02
        color: 0,0,0,1
        padding: dp(10), dp(5)
        size_hint_x: .8
        size_hint_y: 1
        height: self.texture_size[1]
        note: None
    CheckBox:
        id: checkbox
        color: 50/255, 50/255, 50/255, 1
        allow_stretch: True
        keep_ratio: True
        background_color: 1,1,1,1
        size_hint_x: .2
        active: False
        on_press: root.on_checkbox_active(self)

