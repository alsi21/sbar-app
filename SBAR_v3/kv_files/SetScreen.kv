#:kivy 1.0.9

<SetScreen>:
    BoxLayout:
        id:'outer_box'
        spacing: 10
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Image:
                source: 'SBAR_v3\images\SBAR_snake.png'
                allow_stretch: True
                keep_ratio: False
                size_hint: .33,1
            BackgroundLabel:
                text: 'SBAR'
                font_size: '50dp'
                color: 0,0,0,1
                background_color: 216/255, 210/255, 227/255, 1
                size_hint: .33,1
            BackgroundLabel:
                background_color: 216/255, 210/255, 227/255, 1
                size_hint: .33,1

        BoxLayout:
            id: 'inner_box'
            orientation: 'horizontal'
            BackgroundLabel:
                background_color: 1, 1, 1, 1
                size_hint: .2,1
            RoundedSquareButton:
                id: 'label_txt'
                text: root.text
                font_size: '40dp'
                size_hint: .6, 1
            
            BackgroundLabel:
                background_color: 1, 1, 1, 1
                size_hint: .2,1

        BoxLayout:
            orientation: 'horizontal'
            spacing: 25
            RoundButton:
                text: "1"
                background_color: 1,1,1,1
                color: 0,0,0,1
                font_size: '40dp'
                on_press: root.on_button1_press(), root.update_text()
            RoundButton:
                text: '2'
                background_color: 1,1,1,1
                color: 0,0,0,1
                font_size: '40dp'
                on_press: root.on_button2_press(), root.update_text()
            RoundButton:
                text: '3'
                background_color: 1,1,1,1
                color: 0,0,0,1
                font_size: '40dp'
                on_press: root.on_button3_press(), root.update_text()
                
        BoxLayout:
            orientation: 'horizontal'
            spacing: 25
            RoundButton:
                text: '4'
                background_color: 1,1,1,1
                color: 0,0,0,1
                font_size: '40dp'
                on_press: root.on_button4_press(), root.update_text()
            RoundButton:
                text: '5'
                background_color: 1,1,1,1
                color: 0,0,0,1
                font_size: '40dp'
                on_press: root.on_button5_press(), root.update_text()
            RoundButton:
                text: '6'
                background_color: 1,1,1,1
                color: 0,0,0,1
                font_size: '40dp'
                on_press: root.on_button6_press(), root.update_text()
        BoxLayout:
            orientation: 'horizontal'
            spacing: 25
            RoundButton:
                text: '7'
                background_color: 1,1,1,1
                color: 0,0,0,1
                font_size: '40dp'
                on_press: root.on_button7_press(), root.update_text()
            RoundButton:
                text: '8'
                background_color: 1,1,1,1
                color: 0,0,0,1
                font_size: '40dp'
                on_press: root.on_button8_press(), root.update_text()
            RoundButton:
                text: '9'
                background_color: 1,1,1,1
                color: 0,0,0,1
                font_size: '40dp'
                on_press: root.on_button9_press(), root.update_text()
        BoxLayout:
            orientation: 'horizontal'
            spacing: '20dp'
            Label:
            RoundButton:
                text: '0'
                background_color: 1,1,1,1
                color: 0,0,0,1
                font_size: '40dp'
                on_press: root.on_button0_press(), root.update_text()
            RoundButton:
                text: '<-'
                background_color: 1,1,1,1
                color: 0,0,0,1
                font_size: '40dp'
                on_press: root.on_buttondel_press()          