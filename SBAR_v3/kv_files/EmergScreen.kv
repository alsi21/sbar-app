                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                size_hint_y: .02
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(40)
                Label:
                RoundedRedButton:
                    text: "Back"
                    background_color: 227/255,210/255,210/255,1
                    color: 0,0,0,1
                    font_size: '35dp'
                    on_press:
                        root.manager.transition.direction = 'right'
                        root.save_note()
                Label:
            Label:
                size_hint_y: .02
