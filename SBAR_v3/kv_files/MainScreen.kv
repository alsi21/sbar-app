#:kivy 1.0.9

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        id:'outer_box'
        # spacing: 10
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.15
            padding: 0
            Image:
                source: 'SBAR_v3\images\SBAR_snake.png'
                allow_stretch: True
                keep_ratio: False
                size_hint: .33,1
            BackgroundLabel:
                text: 'SBAR'
                font_size: '50dp'
                color: 0,0,0,1
                background_color: 216/255, 210/255, 227/255, 1
                size_hint: .33,1
            BackgroundLabel:
                background_color: 216/255, 210/255, 227/255, 1
                size_hint: .33,1
        ScrollView:
            id: scroll_view
            size_hint_y: .75
            GridLayout:
                id: label_layout
                cols: 1
                spacing: 10
                padding: 0, 10
                size_hint_y: None
                row_force_default: True
                row_default_height: dp(80)
                # Add more labels here...
        BoxLayout:
            size_hint_y: .1
            orientation: 'vertical'
            padding: 0
            BoxLayout:
                size_hint_y: .12
                canvas.before:
                    Color:
                        rgba: 216/255, 210/255, 227/255, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            BoxLayout:
                size_hint_y: .76
                orientation: 'horizontal'
                canvas.before:
                    Color:
                        rgba: 216/255, 210/255, 227/255, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    size_hint_x: .1
                RoundedRedButton:
                    text: "Â¤"
                    background_color: 0,0,0,0.02
                    color: 0,0,0,1
                    font_size: '40dp'
                    on_press: 
                        root.change_transition()
                        root.go_to_settings()
                Label:
                RoundedRedButton:
                    text: "+"
                    background_color: 176/255,21/255,21/255,1
                    color: 0,0,0,1
                    font_size: '50dp'
                    on_press: 
                        root.manager.transition.direction = 'left'
                        root.add_emerg()
                Label:
                RoundedRedButton:
                    text: "+"
                    background_color: 102/255,136/255,1,1
                    color: 0,0,0,1
                    font_size: '50dp'
                    on_press: 
                        root.manager.transition.direction = 'left'
                        root.add_sbar()
                Label:
                    size_hint_x: .1
            BoxLayout:
                size_hint_y: .12
                canvas.before:
                    Color:
                        rgba: 216/255, 210/255, 227/255, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size