#:kivy 1.0.9

<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        id:'outer_box'
        # spacing: 10
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
        Header:
        ScrollView:
            id: scroll_view
            size_hint_y: .75
            GridLayout:
                id: label_layout
                cols: 1
                spacing: 10
                padding: 0, 10
                size_hint_y: None
                row_force_default: True
                row_default_height: dp(80)
                # Add more labels here...
        BoxLayout:
            size_hint_y: .1
            orientation: 'vertical'
            padding: 0
            canvas.before:
                Color:
                    rgba: 216/255, 210/255, 227/255, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                size_hint_y: .12
            BoxLayout:
                size_hint_y: .76
                orientation: 'horizontal'
                Label:
                    size_hint_x: .1
                RoundedRedButton:
                    text: "¤"
                    background_color: 0,0,0,0.02
                    color: 0,0,0,1
                    font_size: '40dp'
                    on_press:
                Label:
                RoundedRedButton:
                    text: "+"
                    background_color: 176/255,21/255,21/255,1
                    color: 0,0,0,1
                    font_size: '50dp'
                    on_press:
                Label:
                RoundedRedButton:
                    text: "+"
                    background_color: 102/255,136/255,1,1
                    color: 0,0,0,1
                    font_size: '50dp'
                    on_press:
                Label:
                    size_hint_x: .1
            BoxLayout:
                size_hint_y: .12
    BoxLayout:
        id: SettingsBox
        orientation: 'horizontal'
        size_hint_y: 0.85
        pos_hint_y: 0.3
        BoxLayout:
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: 216/255, 210/255, 227/255, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            Button:
                text: 'Manual'
                background_color: 209/255,219/255,1,1
                on_press: root.go_to_manual()
                font_size: dp(16) * float(root.get_font_size())
            Label:
                size_hint_y: .5

            BoxLayout:
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: 72/255,76/255,88/255,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: 'font size: ' + str(round(slider.value, 1))
                Slider:
                    id: slider
                    min: .7
                    max: 1.3
                    step:.1
                    cursor_size: (25, 25)
                    cursor_image: 'SBAR_v3/images/white_square.png'
                    value: root.get_font_size()
                    on_touch_up: root.change_font(self.value)
                
            Label:
                size_hint_y: .5
            Button:
                text: 'Byt Pin'
                background_color: 209/255,219/255,1,1
                on_press: root.manager.current = 'set'
                font_size: dp(16)* root.get_font_size()
            Label:
                size_hint_y: .5
            Button:
                text: 'Hjälp'
                background_color: 209/255,219/255,1,1
                on_press: root.go_to_help()
                font_size: dp(16)* root.get_font_size()
            Label:
                size_hint_y: .5
            Label:
            Label:
            Label:
            Label:
            Label:
        BoxLayout:
            canvas:
                Color:
                    rgba: 0,0,0,0
                Rectangle:
                    size: self.size
                    pos: self.pos
            Button:
                background_color: 0,0,0,.10
                on_press: 
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'main'
                    root.go_main()